<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.nosqldemo.NoSqlController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="idLabel" text="ID: " />
  <TextField fx:id="idField" />
  <Label fx:id="nameLabel" text="Name: " />
  <TextField fx:id="nameField" />
  <Label fx:id="ageLabel" text="Age: " />
  <TextField fx:id="ageField" />
  <Label fx:id="cityLabel" text="City: " />
  <TextField fx:id="cityField" />
  <Button fx:id="addButton" text="Add" onAction="#onAddButtonClick" />
  <Button fx:id="readButton" text="Read" onAction="#onReadButtonClick" />
  <Button fx:id="updateButton" text="Update" onAction="#onUpdateButtonClick" />
  <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteButtonClick" />
  <Label fx:id="feedbackLabel"/>


</VBox>
